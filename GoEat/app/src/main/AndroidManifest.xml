<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lucasamado.goeatapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.home.platos.ListaPlatosActivity"></activity>
        <activity android:name=".ui.home.bares.DetalleBarActivity" />
        <activity
            android:name=".ui.home.detalle.DetalleBarScrollingActivity"
            android:label="@string/title_activity_detalle_bar_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.SignupActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>